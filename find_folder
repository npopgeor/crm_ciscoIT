#!/bin/bash
set -e

FOLDER_NAME="Gary Bedol (gbedol)'s files - SP Accounts FY25"
SEARCH_LOCATIONS=( "$HOME/OneDrive"* "$HOME/Library/CloudStorage/" )

FOUND=""

echo "üîç Searching for '$FOLDER_NAME'..."

for loc in "${SEARCH_LOCATIONS[@]}"; do
  CANDIDATE="$loc/$FOLDER_NAME"
  if [ -d "$CANDIDATE" ]; then
    FOUND="$CANDIDATE"
    break
  fi
done

if [ -n "$FOUND" ]; then
  echo "‚úÖ Found: $FOUND"
else
  echo "‚ùå Folder '$FOLDER_NAME' not found in known locations."
  echo "Checked:"
  printf '  - %s\n' "${SEARCH_LOCATIONS[@]}"
fi

